<html>
    <head>
        <meta charset="utf-8">
        <title>To Do List</title>
    </head>    
    <body>
        <% if (day === "Sunday" || day === "Saturday") { %>
            <h1 style="color: red"><%=day%> To Do List</h1>
        <% } else { %>
            <h1 style="color: blue"><%=day%> To Do List</h1>
        <% } %>
    </body>
</html>